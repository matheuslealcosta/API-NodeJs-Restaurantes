{
  "name": "api-nodejs-restaurantes",
  "version": "2.0.0",
  "description": "API RESTful moderna para gerenciamento de restaurantes, produtos e pedidos com autenticação JWT",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "build": "tsc && npx prisma generate",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:build": "docker build -t api-restaurantes .",
    "docker:logs": "docker-compose logs -f api",
    "docker:restart": "docker-compose restart api",
    "postinstall": "npx prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheuslealcosta/API-NodeJs-Restaurantes.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "prisma",
    "postgresql",
    "jwt",
    "rest-api",
    "swagger",
    "docker",
    "restaurant-management"
  ],
  "author": {
    "name": "Matheus Leal Costa",
    "email": "matheuslealcosta@icloud.com",
    "url": "https://github.com/matheuslealcosta"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matheuslealcosta/API-NodeJs-Restaurantes/issues"
  },
  "homepage": "https://github.com/matheuslealcosta/API-NodeJs-Restaurantes#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.0",
    "@types/swagger-ui-express": "^4.1.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "prisma": "^4.11.0",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "winston": "^3.8.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0"
  }
}
